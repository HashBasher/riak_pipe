{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform},
    {platform_define, "^R[1-9]", no_otp_namespaced_types}
]}.
{deps, [
    {lager, ".*", {git, "git://github.com/basho/lager.git", {branch, "feature/otp-17"}}},
    {otp_compat, ".*", {git, "git://github.com/tburghart/otp_compat.git", {branch, "master"}}},
    {riak_core, ".*", {git, "git://github.com/basho/riak_core.git", {branch, "feature/otp-17"}}}
]}.
{edoc_opts, [{preprocess, true}]}.
{cover_enabled, true}.
{xref_checks, []}.
{xref_queries, [{"(XC - UC) || (XU - X - B - cluster_info : Mod)", []}]}.
